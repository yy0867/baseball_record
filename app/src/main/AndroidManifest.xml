<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harry.yaguban">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_baseball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_baseball_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.야구반기록관리">
        <activity
            android:name=".AddPlayerPopupActivity"
            android:label="@string/addplayer_popup_title"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>
        <activity android:name=".PlayGameActivity" />
        <activity
            android:name=".DateSelectPopupActivity"
            android:label="@string/date_popup_title"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".AddInformationInputActivity" />
        <activity android:name=".ManageActivity" />
        <activity android:name=".EachActivity" />
        <activity android:name=".AddActivity" />
        <activity android:name=".TotalActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadingActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <service
            android:name=".UnCatchedExit"
            android:stopWithTask="false" />
    </application>

</manifest>